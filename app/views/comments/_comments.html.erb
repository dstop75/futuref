<h1>Listing <%= @resource.name %>-related Comments:</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @resource.comments.each do |comment| %>
      <tr>
        <div>
          <td><%= comment.message, %></td>
          <td><%= link_to comment.message, "#{comment.url}" %></td>
          <td><%= link_to 'Edit', edit_resource_path(comment.id) %></td>
          <td><%= link_to 'Delete Comment', resource_path(comment.id), method: :delete, data: { confirm: "Are you sure?" } %></td>
        </div>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Comment', new_resource_comment_path(@resource) %>
