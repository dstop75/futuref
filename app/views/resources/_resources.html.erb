<h1>Listing <%= @topic.name %>-related Resources:</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @topic.resources.each do |resource| %>
      <tr>
        <div>
          <td><%= link_to resource.name, "#{resource.url}" %></td>
          <td><%#= link_to 'Edit', edit_resource_path(resource) %></td>
          <td><%#= link_to 'Delete', resource, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </div>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Resource', new_topic_resource_path(@topic) %>
